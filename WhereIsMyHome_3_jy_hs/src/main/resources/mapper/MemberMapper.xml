<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.member.model.mapper.MemberMapper">

	<!-- <resultMap type="userDto" id="user"> <result column="id" property="id" 
		/> <result column="password" property="password" /> <result column="role" 
		property="role" /> </resultMap> -->

	<select id="getMember" parameterType="map" resultType="memberDto">
		select * from
		members
		where id = #{id} and password = #{password}
	</select>

	<insert id="insertMember" parameterType="memberDto">
		insert into members
		values (#{id},#{password}, #{email}, #{name})
	</insert>
	
	<update id="updateMember" parameterType="memberDto">
		update members
		set email = #{email}, name = #{name}
		where id = #{id};
	</update>

	<select id="getMemberByMemberId" parameterType="String">
		select * from
		members
		where id = #{id}
	</select>
</mapper>
    